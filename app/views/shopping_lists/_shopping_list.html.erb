<% @foods.each do |food| %>
    <tr>
      <% quantity = RecipeFood.joins(:food).where(food_id: food.id).sum('quantity') %>
      <td><%= food.name %></td>
      <td><%= quantity %> <%= food.measurement_unit %> </td>
      <td>$ <%= food.price * quantity %></td>

      <td class="d-flex gap-2">
        <div>
          <%= link_to "Edit", edit_recipe_path(@recipe_food) %> 
          <%= button_to "Destroy", @recipe_food, method: :delete%>
        </div>
      </td>
    </tr>
<% end %>