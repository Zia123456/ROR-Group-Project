<div class="recipe-food-edit-container">
  <h1 class="text-center">Edit ingredient</h1>
    <%= form_with url: user_recipe_recipe_food_path, method: :patch, :html => {:class => "form"} do |form| %>
      <div class="form-group mt-3">
        <%= form.select :food_id, @foods.collect  {|food| [food.name, food.id]},{ include_blank: false}, class: "form-control", placeholder: "Recipe" %>
      </div>
      <div class="form-group">
        <%= form.number_field :quantity, class: "form-control", placeholder: "Quantity" %>
      </div>
      <button type="submit" class="btn-add-gen">Edit</button>
    <% end %>
</div>