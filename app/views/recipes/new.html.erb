<section class="new-recipe-container">
  <h1 class="text-add-recipe">Add a Recipe</h1>
    <%= form_with model: @recipe, url: user_recipes_path(@user, @recipe), method: :post do |form| %>
      <div class="form-group">
        <%= form.text_field :name, class: "form-control", placeholder: "Recipe" %>
      </div>
      <div class="form-group">
        <%= form.text_field :preparation_time, class: "form-control", placeholder: "Preparation Time" %>
      </div>
      <div class="form-group">
        <%= form.text_field :cooking_time, class: "form-control", placeholder: "Cooking Time" %>
      </div>
      <div class="form-group">
        <%= form.text_area :description, class: "form-control-description", placeholder: "Description" %>
      </div>
      <div class="form-control">
        <%= form.check_box(:public, { class: "form-check-input" }, true, false) %>
        <%= form.label "Public", class: "form-check-label" %>
    </div>
      <button type="submit" class="submit-new-recipe">Submit</button>
    <% end %>
</section>