<div class='nav-container'>
  <%= link_to "Inventories", inventories_path %>
  <%= link_to "Recipes", recipes_path %>
  <%= link_to "public recipes", public_recipes_path %>
  <%= link_to "Shopping list", shopping_lists_path %>
  <%= link_to "Recipe foods", recipe_foods_path %>
</div>

<div class='foods-list-container'>
  <h1>Foods</h1>
  <button class="btn"><%= link_to "Add food", new_food_path %></button>

<table class='foods-table'>
  <thead>
    <tr>
      <th class='foods-table'>Name</th>
      <th class='foods-table'>Measurement Unit</th>
      <th class='foods-table'>Price Unit</th>
      <th class='foods-table'>Actions</th>
    </tr>
  </thead>
  <tbody class='foods-table'>
    <% @foods.each do |food| %>
      <tr>
        <td class='foods-table'><%= food.name %></td>
        <td class='foods-table'><%= food.measurement_unit %></td>
        <td class='foods-table'><%= food.price %></td>
        <td class='foods-table'>
          <% if can? :manage, food%>
            <%= link_to "Delete", food_path(food.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{food.name}?" } %>
          <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

