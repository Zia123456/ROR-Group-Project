<div class="new-recipe-food-container">
    <h1 class="text">Add ingredient</h1>
    <%= form_with url: user_recipe_recipe_foods_path(params[:recipe_id]), method: :post, :html => {:class => "form"} do |form| %>
      <div class="form-group">
        <%= form.select :food_id, @foods.collect  {|food| [food.name, food.id]},{ include_blank: false}, class: "form-control", placeholder: "Recipe" %>
      </div>
      <div class="form-group">
        <%= form.number_field :quantity, class: "form-control", placeholder: "Quantity" %>
      </div>
      <button type="submit" class="btn-add-gen">Add</button>
    <% end %>
</div>