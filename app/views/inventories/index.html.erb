
<div class="inventories-container">
  <% if @inventories.empty? %>
    <h1>You have no inventories yet</h1>
  <% end %>

  <%= link_to 'Add a new inventory', new_inventory_path, class: "add-inventory-button" %>

  <% unless @inventories.empty? %>
    <h2>Your inventories list:</h2>
    <% @inventories.each do |inventory| %>
      <div class="inventory-card">
        <h5 class="card-header"><%=link_to inventory.name, inventory_path(inventory.id), class: "inventory-names" %></h5>
        <div class="card-body">
          <p class="card-text"><%=inventory.description%></p>
          <%= button_to 'Delete', inventory_path(inventory.id), method: :delete, class: "delete-button" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>