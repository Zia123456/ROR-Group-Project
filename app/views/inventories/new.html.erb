<div class="new-inventory">
  <h1>Create a new inventory:</h1>
  <%= form_with model: @inventory, url: inventories_path, method: :post, :html => {:class => "inv-form"} do |form| %>
    <div class="form-body">
      <%= form.label :name, 'Name', class: "form-label" %>
      <%= form.text_field :name, class:"form-control" %>
    </div>
    <div class="form-body">
      <%= form.label :description, 'Description', class: "form-label" %>
      <%= form.text_area :description, class:"form-control" %>
    </div>
    <%= form.submit 'Create inventory', class: "add-button" %>
  <% end %>
</div>